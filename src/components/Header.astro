---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import Cluster from '../layouts/primitives/Cluster.astro';
import Center from '../layouts/primitives/Center.astro';
---

<header class="site-header">
	<Center max="75rem" gutters="var(--space-m)">
		<nav class="nav-container">
			<a href="/" class="site-title">{SITE_TITLE}</a>
			<Cluster space="var(--space-xs)" justify="flex-end">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/essays">Essays</HeaderLink>
				<HeaderLink href="/courses">Courses</HeaderLink>
				<HeaderLink href="/library">Library</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</Cluster>
		</nav>
	</Center>
</header>

<style>
	.site-header {
		background-color: var(--color-bg);
		border-block-end: 1px solid var(--color-border);
		position: sticky;
		inset-block-start: 0;
		z-index: 100;
	}

	.nav-container {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: space-between;
		gap: var(--space-m);
		padding-block: var(--space-s);
	}

	.site-title {
		font-size: var(--step-0);
		font-weight: 700;
		color: var(--color-dark);
		text-decoration: none;
		white-space: nowrap;
	}

	.site-title:hover {
		color: var(--color-accent);
	}

	/* On very small screens, stack the nav */
	@media (max-width: 30rem) {
		.nav-container {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
